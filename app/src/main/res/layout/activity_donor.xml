<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"

    tools:context="com.bluecepheid.admin.vdonor.DonorActivity">
    <com.bluecepheid.admin.vdonor.CircleProgressBar
        android:id="@+id/pBar"
        android:layout_width="80dp"
        android:layout_height="80dp"


        android:layout_centerHorizontal="true"

        android:layout_centerInParent="true"


        app:mlpb_enable_circle_background="false"
        android:visibility="invisible"
        app:mlpb_arrow_width="10dp"
        app:mlpb_progress_stoke_width="5dp"
        />
    <RelativeLayout
        android:id="@+id/labellayout"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#ff8f2825"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:layout_alignParentTop="true"
        >
        <RelativeLayout android:id="@+id/sbutton" android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_height="40dp">

            <ImageView
                android:id="@+id/picon"
                android:layout_width="15dp"
                android:layout_height="15dp"

                android:layout_centerVertical="true"

                android:src="@mipmap/search_icon1"

                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=" By Location"
                android:id="@+id/text"
                android:layout_toRightOf="@+id/picon"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"

                android:textColor="#ffffffff"
                android:textSize="15sp"/>

        </RelativeLayout>
        <RelativeLayout android:id="@+id/sbutton1" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_height="40dp">

            <ImageView
                android:id="@+id/picon1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/search_icon1"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=" Near Me"
                android:id="@+id/text1"
                android:layout_toRightOf="@+id/picon1"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"

                android:textColor="#ffffffff"
                android:textSize="15sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/rlayout" android:layout_below="@+id/labellayout" android:visibility="gone" android:paddingLeft="10dp"
        android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <RelativeLayout android:id="@+id/l1" android:layout_marginTop="10dp" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <EditText
                android:id="@+id/spnr_blood"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Select Blood Group"
                android:textCursorDrawable="@drawable/mycursor1"
                android:textSize="14sp"
                android:textColorHint="#454545"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/img_blood"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/arrow"

                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/spnr_blood"
                android:layout_alignEnd="@+id/spnr_blood" />
        </RelativeLayout>
        <RelativeLayout android:id="@+id/l2l" android:layout_marginTop="10dp" android:layout_below="@+id/l1" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <EditText
                android:id="@+id/spnr_state"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Select State"
                android:textCursorDrawable="@drawable/mycursor1"
                android:textSize="14sp"
                android:textColorHint="#454545"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/img_state"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/arrow"

                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/spnr_state"
                android:layout_alignEnd="@+id/spnr_state" />
        </RelativeLayout>
        <RelativeLayout android:id="@+id/l2" android:layout_marginTop="10dp" android:layout_below="@+id/l2l" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <EditText
                android:id="@+id/spnr_city"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Select City"
                android:textCursorDrawable="@drawable/mycursor1"
                android:textSize="14sp"
                android:textColorHint="#454545"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/img_city"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/arrow"

                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/spnr_city"
                android:layout_alignEnd="@+id/spnr_city" />
        </RelativeLayout>
       <!-- <RelativeLayout android:id="@+id/l111" android:layout_below="@+id/l2" android:layout_marginTop="10dp" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <EditText
                android:id="@+id/spnr_local"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Select Locality"
                android:textCursorDrawable="@drawable/mycursor1"
                android:textSize="14sp"
                android:textColorHint="#454545"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/img_local"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/arrow"

                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/spnr_local"
                android:layout_alignEnd="@+id/spnr_local" />
        </RelativeLayout>-->
        <RelativeLayout android:id="@+id/ll2" android:layout_marginTop="40dp" android:layout_below="@+id/l2" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <Button
                android:id="@+id/search"
                android:layout_width="300dp"
                android:textColor="#fff"
                android:layout_height="40dp"
                android:background="#ffd61d23"
                android:textCursorDrawable="@drawable/mycursor1"
                android:textSize="14sp"
                android:text="SEARCH"
                android:textStyle="bold"

                />


        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rlayout1" android:layout_below="@+id/labellayout" android:visibility="gone" android:paddingLeft="10dp"
        android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">

        <RelativeLayout android:id="@+id/l11" android:layout_marginTop="10dp" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <EditText
                android:id="@+id/spnr_blood1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Select Blood Group"
                android:textCursorDrawable="@drawable/mycursor1"
                android:textSize="14sp"
                android:textColorHint="#454545"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/img_blood1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/arrow"

                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/spnr_blood1"
                android:layout_alignEnd="@+id/spnr_blood1" />
        </RelativeLayout>
        <RelativeLayout android:id="@+id/l2l1" android:layout_marginTop="10dp" android:layout_below="@+id/l11" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <EditText
                android:id="@+id/spnr_radius1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Select Radius"
                android:textCursorDrawable="@drawable/mycursor1"
                android:textSize="14sp"
                android:textColorHint="#454545"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <ImageView
                android:id="@+id/img_radius1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/arrow"

                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/spnr_radius1"
                android:layout_alignEnd="@+id/spnr_radius1" />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/ll21"  android:layout_marginTop="40dp" android:layout_below="@+id/l2l1" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <Button
                android:id="@+id/search1"

                android:layout_width="300dp"
                android:textColor="#fff"
                android:layout_height="40dp"
                android:background="#ffd61d23"
                android:textCursorDrawable="@drawable/mycursor1"
                android:textSize="14sp"
                android:text="SEARCH"
                android:textStyle="bold"

                />


        </RelativeLayout>
    </RelativeLayout>
    <ListView android:id="@+id/dlist1"
        android:padding="2dp"

        android:dividerHeight="2.0sp"
        android:visibility="invisible"
        android:layout_height="wrap_content" android:paddingLeft="10dp"
        android:paddingRight="10dp" android:layout_width="wrap_content"
        android:layout_below="@+id/rlayout" />
    <ListView android:id="@+id/dlist2"
        android:padding="2dp"

        android:dividerHeight="2.0sp"
        android:layout_height="wrap_content" android:paddingLeft="10dp"
        android:paddingRight="10dp" android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_below="@+id/rlayout" />
</RelativeLayout>
