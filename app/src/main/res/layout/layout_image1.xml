<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="460dp"
    android:layout_height="333dp"
    android:background="@drawable/bg_border">

    <LinearLayout
        android:id="@+id/lytLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="116dp"
            android:layout_height="109dp"
            android:scaleType="fitXY"
            android:id="@+id/imgUser"/>

        <ImageView
            android:layout_width="86dp"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/one"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lytRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/lytLeft">

        <ImageView
            android:id="@+id/imgBloodDrop"
            android:layout_width="69dp"
            android:layout_height="102dp"
            android:src="@drawable/blood_drop"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/im"
            android:layout_alignEnd="@+id/im" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/imgBloodDrop"
            android:ellipsize="end"
            android:layout_marginTop="30dp"
            android:text="Gagan Deep"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="italic"/>




        <RelativeLayout
            android:layout_width="295dp"
            android:layout_height="176dp"
            android:orientation="vertical"
            android:id="@+id/im"
            android:layout_marginTop="117dp">

            <ImageView
                android:layout_width="295dp"
                android:layout_height="176dp"

                android:src="@drawable/two"
                android:id="@+id/imageView"

                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvBloodGroupValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB+"
                android:textColor="#ff205900"
                android:textSize="60sp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dip"
                android:layout_centerInParent="true"

                android:padding="12dip"

                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>