<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="460dp"
                android:layout_height="333dp"
                android:background="@drawable/bg_border">

    <LinearLayout
        android:id="@+id/lytLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="116dp"
            android:layout_height="109dp"
            android:scaleType="fitXY"
            android:id="@+id/imgUser"/>

        <ImageView
            android:layout_width="86dp"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/proud_donor"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lytRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/lytLeft">

        <ImageView
            android:id="@+id/imgBloodDrop"
            android:layout_width="69dp"
            android:layout_height="102dp"
            android:src="@drawable/blood_drop"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/imgBloodDrop"
            android:ellipsize="end"
            android:layout_marginTop="20dp"
            android:text="Gagan Deep"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/lblBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Blood Group: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_below="@+id/tvName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvBloodGroupValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB+"
            android:textColor="#000"
            android:textSize="25sp"
            android:ellipsize="end"
            android:textStyle="italic|bold"
            android:layout_below="@+id/tvName"
            android:layout_toRightOf="@+id/lblBloodGroup"
            android:layout_toEndOf="@+id/lblBloodGroup" />


        <ImageView
            android:layout_width="295dp"
            android:layout_height="176dp"
            android:layout_marginTop="117dp"
            android:src="@drawable/hand"
            android:id="@+id/imageView" />

    </RelativeLayout>

</RelativeLayout>