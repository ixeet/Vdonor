<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@mipmap/list_style1"
    android:padding="10dp"


    >

    <!-- Single ListItem -->

    <!-- Product Name -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_gravity="start"

        android:textStyle="bold"

        android:textColor="#ffffffff"
        android:id="@+id/name" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address1"
        android:textColor="#ffffffff"
        android:id="@+id/address1"
        android:layout_below="@id/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/contact1"
        android:textColor="#ffffffff"
        android:layout_below="@id/address1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCALITY"
        android:textColor="#ffffffff"
        android:id="@+id/contact2"
        android:layout_below="@id/contact1"/>

    <Button android:id="@+id/call"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/sms"
        android:background="@mipmap/call"
android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>